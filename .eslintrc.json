{
  "root": true,
  "env": {
    "es2021": true,
    "node": true
  },
  "globals": {
    "_z": "readonly",
    "chalk": "readonly",
    "fs": "readonly",
    "argv": "readonly",
    "OPTS": "readonly",
    "$": "readonly",
    "within": "readonly",
    "die": "readonly",
    "globby": "readonly",
    "question": "readonly",
    "logMd": "readonly",
    "fmtErrStr": "readonly",
    "OPTION_TYPES": "readonly",
    "useOpts": "readonly",
    "ifFunc": "readonly"
  },
  "extends": ["eslint:recommended", "plugin:prettier/recommended"],
  "plugins": ["prettier"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "prettier/prettier": "error"
  },
  "ignorePatterns": ["node_modules/", "dist/", "build/", "*.min.js"]
}
